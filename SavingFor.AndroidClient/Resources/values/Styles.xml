<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="expanded_title_text_appearance" parent="android:style/TextAppearance">
    <item name="android:textColor">@android:color/transparent</item>
  </style>
  <style name="primary_text" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/primary_text</item>
  </style>
  <style name="primary_text_title" parent="primary_text">
    <item name="android:textSize">@dimen/size_title</item>
    <item name="android:alpha">0.87</item>
  </style>
  <style name="primary_text_header" parent="primary_text">
    <item name="android:textSize">@dimen/size_sub_heading</item>
    <item name="android:alpha">0.87</item>
  </style>
  <style name="primary_text_body" parent="primary_text">
    <item name="android:textSize">@dimen/size_body</item>
    <item name="android:alpha">0.54</item>
  </style>
  <style name="primary_text_caption" parent="primary_text">
    <item name="android:textSize">@dimen/size_caption</item>
    <item name="android:alpha">0.87</item>
  </style>
  <style name="secondary_text" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/secondary_text</item>
  </style>
  <style name="secondary_text_header" parent="secondary_text">
    <item name="android:textSize">@dimen/size_sub_heading</item>
    <item name="android:alpha">0.54</item>
  </style>
  <style name="secondary_text_normal" parent="secondary_text">
    <item name="android:textSize">@dimen/size_body</item>
    <item name="android:alpha">0.54</item>
  </style>
  <style name="secondary_text_caption" parent="secondary_text">
    <item name="android:textSize">@dimen/size_caption</item>
    <item name="android:alpha">0.38</item>
  </style>
  <style name="text_input_layout_style" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:textColorHint">@color/secondary_text</item>
    <item name="android:textSize">@dimen/size_sub_heading</item>
    <item name="colorAccent">@color/accent</item>
    <item name="colorControlNormal">@color/divider</item>
    <item name="colorControlActivated">@color/primary_dark</item>
  </style>
</resources>